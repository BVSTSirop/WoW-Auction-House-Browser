<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/box_inset_layout_padding"
    tools:context=".AuctionsActivity"
    tools:deviceIds="wear">

    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/auctionItemPriceHeader"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".3"
            android:text="Price" />

        <TextView
            android:id="@+id/auctionItemNameHeader"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:text="Item" />

        <TextView
            android:id="@+id/auctionItemLevelHeader"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".125"
            android:text="Level" />

        <TextView
            android:id="@+id/auctionItemQuantityHeader"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".125"
            android:text="Qty" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/acutionsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="20dp"
        android:layout_alignBaseline="@id/headerLayout" />
</RelativeLayout>